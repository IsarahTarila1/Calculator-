<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64sp" />
    <TextView
        android:id="@+id/solution_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textAlignment="textEnd"
        android:layout_above="@+id/result_textview"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="C"
                android:backgroundTint="#E61B0C"
                android:id="@+id/button_cancel"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:onClick="operatorEvent"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="/"
                android:backgroundTint="#E4AE0C"
                android:id="@+id/button_division"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:onClick = "operatorEvent"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="x"
                android:backgroundTint="#E4AE0C"
                android:id="@+id/button_multiplication"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:text="%"
                android:onClick="operatorEvent"
                android:layout_margin="12dp"
                android:backgroundTint="#E4AE0C"
                android:id="@+id/button_modulus"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="7"
                android:id="@+id/button_7"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="8"
                android:id="@+id/button_8"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="9"
                android:id="@+id/button_9"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:onClick="operatorEvent"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:text="-"
                android:backgroundTint="#E4AE0C"
                android:layout_margin="12dp"
                android:id="@+id/button_subtraction"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="4"
                android:id="@+id/button_4"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="5"
                android:id="@+id/button_5"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="6"
                android:id="@+id/button_6"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:onClick="operatorEvent"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:text="+"
                android:backgroundTint="#E4AE0C"
                android:layout_margin="12dp"
                android:id="@+id/button_addition"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="1"
                android:id="@+id/button_1"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="2"
                android:id="@+id/button_2"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="3"
                android:id="@+id/button_3"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:text="^"
                android:backgroundTint="#E4AE0C"
                android:layout_margin="12dp"
                android:id="@+id/button_raiseToPower"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="20sp"
                android:layout_margin="12dp"
                android:text="AC"
                android:backgroundTint="#E61B0C"
                android:id="@+id/button_delete"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="0"
                android:id="@+id/button_0"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:layout_margin="12dp"
                android:text="."
                android:id="@+id/button_decimal"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="65dp"
                android:onClick="equalEvent"
                android:layout_height="65dp"
                app:cornerRadius="34dp"
                android:textSize="32sp"
                android:text="="
                android:backgroundTint="#E4AE0C"
                android:layout_margin="12dp"
                android:id="@+id/button_equalsTo"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>